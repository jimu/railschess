<%= form_with(model: game) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Params</h3>
  <% debug game %>
  <% p game %>

  <h3>Game</h3>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, 
      (1..Game::STATUS_MAX).collect {|i| [Game::STATUS_DESCRIPTION[i], i] },
      { include_blank: "Select game status..." }
      %>
  </div>

  <%= form.fields_for :players do |form_player| %>
    <div>
      <h3>Player</h3>
      <%= form_player.label :color %>
      <%= form_player.text_field :color %>

      <%= form_player.label :user_id %>
      <%= form_player.text_field :user_id %>
      <!--%= select_tag "user_id", options_from_collection_for_select(User.all, 'id', 'name', :user_id) %-->
      <!--%= select_tag :form_player, options_from_collection_for_select(User.all, 'id', 'name', @player.user_id) %-->

      <%= form_player.label :status %>
      <%= form_player.text_field :status %>
  </div>
    </div>
  <% end %>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
